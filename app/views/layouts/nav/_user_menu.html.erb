<li class="dropdown user user-menu">
  <!-- Menu Toggle Button -->
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <!-- The user image in the navbar-->
    <img src="<%= current_user.gravatar_url(size: "160") %>" class="user-image" alt="User Image">
    <!-- hidden-xs hides the username on small devices so only the image appears. -->
    <span class="hidden-xs"><%= current_user.fullname %></span>
  </a>
  <ul class="dropdown-menu">
    <!-- The user image in the menu -->
    <li class="user-header">
      <img src="<%= current_user.gravatar_url(size: "160") %>" class="img-circle" alt="User Image">

      <p>
        <%= current_user.fullname %>
        <small><%= current_user.email %></small>
        <small>Member since <%= current_user.created_at.strftime("%b. %Y") %></small>
      </p>
    </li>
    <!-- Menu Body -->
    <li class="user-body">

    </li>
    <!-- Menu Footer-->
    <li class="user-footer">
      <div class="pull-left">
        <%= link_to 'Profile', edit_user_registration_path, :class => 'btn btn-default btn-flat' %>
      </div>
      <div class="pull-right">
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-flat" %>
      </div>
    </li>
  </ul>
</li>
