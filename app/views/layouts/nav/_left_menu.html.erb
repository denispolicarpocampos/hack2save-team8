<div class="collapse navbar-collapse pull-left" id="navbar-collapse">
  <ul class="nav navbar-nav">
    <li><%= link_to "My Organizations", organizations_path %></li>
    <li><%= link_to "My Subscriptions", user_subscriptions_path %></li>
  </ul>
  <%= simple_form_for :search, url: :jobs_filters, method: :get, html: { class: "navbar-form navbar-left", id: "search_jobs" } do |f| %>
    <div class="form-group">
      <div class="input-group">
        <%= f.input_field :text, class: "form-control", id: "navbar-search-input", placeholder: "Search jobs" %>
        <span class="input-group-btn">
          <%= button_tag type: "submit", class: "btn btn-default", id: "send_search" do %>
            <%= fa_icon "search" %>
          <% end %>
        </span>
      </div>
    </div>
  <% end %>
</div>
