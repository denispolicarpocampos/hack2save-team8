<aside class="col-lg-3 col-md-3 col-sm-5 col-xs-12 pull-left">
  <div class="box box-primary">
    <div class="box-body text-center">
      <%= image_tag resource.gravatar_url %>
      <br />
      <small>Powered by <a href="https://pt.gravatar.com/" target="_blank">Gravatar</a></small>
    </div>
  </div>
</aside>

<div class="col-lg-1 col-md-1 col-sm-1"></div>

<div class="col-lg-9 col-md-9 col-sm-7 col-xs-12">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="box box-default">
      <div class="box-body">
        <%= f.error_notification %>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <%= f.input :email %>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <%= f.input :fullname %>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <%= f.input :document_number %>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <%= f.input :gender, as: :radio_buttons %>
        </div>
      </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.submit "Save Profile", class: "btn btn-primary btn-flat pull-right" %>
    </div>
  <% end %>
</div>
